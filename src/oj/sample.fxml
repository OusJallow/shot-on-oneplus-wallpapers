<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.controlsfx.control.StatusBar?>

<?import oj.utilities.StatusBarCustom?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oj.Controller">
   <center>
      <GridPane alignment="center" >
          <Button fx:id="pullWallpaperButton" onAction="#pullAndSetWallpaper" text="Set Wallpaper" GridPane.columnIndex="4" GridPane.rowIndex="5" />
          <ProgressIndicator fx:id="loadingWallpaperIndicator" visible="false" GridPane.columnIndex="4" GridPane.rowIndex="5" />
      </GridPane>
   </center>
   <bottom>
      <StatusBarCustom fx:id="statusBar" text="" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
